                <h3 class="yellow_txt"><a href="/industries">Список виробників</a></h3>
                <h1 class="yellow_txt">Подробиці</h1>
                <table>
                    <tbody>
                    <tr>
                        <td class="p_sing">industry Name</td>
                        <td>:</td>
                        <td><%= industry.name %></td>
                    </tr>
                    </tbody>
                </table>
                <% if (admin) { %>
                    <h3 class="yellow_txt"><a href="/industries/edit/<%= industry._id%>">EDIT</a></h3>
                    <form action="/industries/delete/<%= industry._id%>" method="post">
                        <button class="button_top_sing" type="submit">DELETE</button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
