    <title>Ammo's service</title>
  </head>
  <body>
    <div class="container"><%- body %></div>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
      integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
      integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
      crossorigin="anonymous"
    ></script>
  <style type="text/css">
    body{
      display: flex;
      flex-direction: column;
      background-color: silver;
      margin: 0px;
    }
    a:active{
      color: white;
    }
    a:visited{
      color: white;
    }
    a:hover{
      transform: scale(1.04);
      color: #A40004;
      cursor: pointer;
    }
    #h1_top{
      background-color: #FFD500;
      color: black;
      font-weight: bold;
      padding: 10px;
      font-family: sans-serif, "Arial";
      margin-left: 10px;
      border-radius: 15px;
    }
    #h1_top:hover{
      transform: scale(1.04);
    }
    h2{
      border-radius: 3px;
      border-top: 5px solid #FFCE00;
      color: #FFDF00 ;
      padding-top: 15px;
      margin-top: 5px;
      font-family: sans-serif, Impact;
    }
    .button_top:hover {
      transform: scale(1.07);
      color: 	#B92E3B;
    }
    .button_top_sing:hover {
      transform: scale(1.07);
      color: #A40004;
    }
    .button_top{
      margin: 5px;
      padding: 5px;
      font-weight: bold;
      font-size: x-large;
      background-color: darkgrey;
      cursor: pointer;
      border-radius: 25px;
    }
    .button_top_sing{
      padding: 5px;
      margin: 15px;
      font-weight: bold;
      font-size: large;
      border: 3px solid white;
      border-radius: 25px;
      background-color: rgba(0, 0,0, 0.7);
      color: white;
      cursor: pointer;
    }

    /* PAGE WELCOME START */

    #block_top{
      width: 100%;
      display: flex;
      justify-content: space-between;
      background-color: black;
      text-align: center;
    }
    #block_top_left{
      display: flex;
      align-items: center;
      margin-left: 10px;
    }
    #block_top_left_img{
      margin: 20px;
      display: flex;
      border: 3px solid white;
      border-radius: 200px;
      background-image: url("icon.jpg");
      background-size: cover;
      width: 100px;
      height: 100px;
    }
    #block_top_left_img:hover{
      transform: scale(1.04);
    }
    #block_top_right{
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin: 20px;
    }
    #block_top_right_buttons{
      display: flex;
      flex-direction: column;
    }
    #block_top_right_txt{
      color: yellow;
      font-weight: bold;
      font-size: xx-large;
      margin: 20px;
    }
    #block_middle{
      display: flex;
      justify-content: center;
      height: 800px;
      width: 100%;
      background-size: 100%;
      background-image: url("users/main.jpg");
      background-attachment: fixed;
    }
    #block_bottom{
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 100%;
      background-color: black;
      padding: 10px;
    }
    .h1_bot{
      display: flex;
      justify-content: center;
      color: white;
      font-size: large;
    }
    .button_row {
      display: flex;
      flex-direction: row;
    }
    .yellow_back_black_txt{
      background-color: yellow;
      color: black;
    }
    .yellow_txt{
      color: yellow;
      font-size: xx-large;
    }
    /* PAGE WELCOME END */
    /* PAGE ABOUT START */

    #block_middle_info{
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    #block_middle_info_inside{
      display: flex;
      flex-direction: column;
      width: 100%;
      border-radius: 20px;
      padding: 15px;
      background-color:  rgba(0, 0, 0, 0.7);

    }
    #block_middle_info_inside_p{
      color: white;
      font-size: x-large;
    }

    /* PAGE ABOUT END */

    /* PAGE INDEX START */

    #block_middle_sing{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-image: url("main.jpg");
      background-size: 100%;
      height: 500px
    }
    #block_middle_info_sing{
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    #block_middle_info_inside{
      display: flex;
      text-align: center  ;
    }
    #block_middle_buttons_sing{
      display: flex;
    }

    /* PAGE INDEX END */

    /* PAGE SING IN START */
    #block_middle_sing{
      height: 600px;
    }
    #block_middle_info_inside{
      display: flex;
    }
    #block_middle_info_inside_buttons{
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .p_sing{
      color: white;
      font-weight: bold;
    }
    .txt_field{
      width: 500px;
      padding: 5px;
      margin: 3px;
      font-weight: bold;
      font-size: large;
      border: 3px solid white;
      border-radius: 25px;
      background-color: rgba(0, 0,0, 0.7);
      color: white;
    }
    .p_on_black{
      color: white;
    }
  </style>
  </body>
</html>
