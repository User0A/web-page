            <%- include('../header'); -%>
            <div class="container">
                <% if (admin) { %>
                   <div><h3 class="yellow_txt"><a class="button_top_sing" href="/hospitals/create">Додати нові дані</a></h3></div>
                <% } %>
                <h1 class="yellow_back_black_txt">Зведена таблиця даних</h1>
                <% if(hospitals.length>0) { %>
                    <table class="list-table">
                        <thead>
                        <tr class="table_data">
                            <th>ЗВАННЯ, ПІБ</th>
                            <th>ВИД ЗБРОЇ, НОМЕР</th>
                        </tr>
                        </thead>
                        <tbody>

                        <% for(var i=0; i<hospitals.length;i++) { %>
                            <% console.log(hospitals[i]); %>
                            <tr>
                                <td><a href="/hospitals/show/<%= hospitals[i]._id%>"><%= hospitals[i].name%></a></td>
                                <td><%= hospitals[i].region%></td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                        <div><p class="yellow_txt">Жодних даних не виявлено</p></div>
